import {
  Box,
  Chip,
  FormControl,
  InputLabel,
  MenuItem,
  OutlinedInput,
  Select,
} from "@material-ui/core";
import React from "react";
import { FiltersInterface, useGetFilters } from "../api";

interface FiltersProps {}

const Filters: React.FC<FiltersProps> = ({}) => {
  const [selectedFilters, setSelectedFilters] =
    React.useState<FiltersInterface>({
      courses: [],
      languages: [],
      preferences: [],
      skills: [],
      studyprogram: [],
      university: [],
    });

  const [{ data: filtersData, loading: filtersLoading }] = useGetFilters();

  const handleChange = (
    event: React.ChangeEvent<{ value: unknown }>,
    filter:
      | "university"
      | "courses"
      | "languages"
      | "preferences"
      | "studyprogram"
  ) => {
    setSelectedFilters((prevState) => {
      let newState = Object.assign({}, prevState);
      newState[filter] = event.target.value as any[];
      return newState;
    });
  };
  return (
    <div>
      <FormControl sx={{ m: 1, width: 300 }}>
        <InputLabel id="university-label">Universities</InputLabel>
        <Select
          labelId="university-label"
          id="university"
          multiple
          value={selectedFilters.university}
          onChange={(e) => handleChange(e, "university")}
          input={
            <OutlinedInput
              id="select-multiple-university"
              label="Universities"
            />
          }
          renderValue={(selected) => (
            <Box sx={{ display: "flex", flexWrap: "wrap" }}>
              {selected.map((value) => (
                <Chip key={value.id} label={value.name} sx={{ m: "2px" }} />
              ))}
            </Box>
          )}
        >
          {filtersData?.university.map((value) => (
            <MenuItem key={value.id} value={value}>
              {value.name}
            </MenuItem>
          ))}
        </Select>
      </FormControl>

      <FormControl sx={{ m: 1, width: 300 }}>
        <InputLabel id="studyprogram-label">Study Programs</InputLabel>
        <Select
          labelId="studyprogram-label"
          id="studyprogram"
          multiple
          value={selectedFilters.studyprogram}
          onChange={(e) => handleChange(e, "studyprogram")}
          input={
            <OutlinedInput
              id="select-multiple-studyprogram"
              label="Study Programs"
            />
          }
          renderValue={(selected) => (
            <Box sx={{ display: "flex", flexWrap: "wrap" }}>
              {selected.map((value) => (
                <Chip key={value.id} label={value.name} sx={{ m: "2px" }} />
              ))}
            </Box>
          )}
        >
          {filtersData?.studyprogram.map((value) => (
            <MenuItem key={value.id} value={value}>
              {value.name}
            </MenuItem>
          ))}
        </Select>
      </FormControl>
    </div>
  );
};

export default Filters;
